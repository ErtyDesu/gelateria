<%= form_with(model: gelati) do |form| %>
  <% if gelati.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gelati.errors.count, "error") %> prohibited this gelati from being saved:</h2>

      <ul>
        <% gelati.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-sm form-label">
          <%= form.label :nome, class: 'form-label'%>
          <%= form.text_field :nome, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm form-label">
          <%= form.label :ingredienti, class: 'form-label'%>
          <%= form.text_field :ingredienti, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm form-label">
          <%= form.label :calorie, class: 'form-label' %>
          <%= form.number_field :calorie, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm form-label">
          <%= form.label :cover, class: 'form-label' %>
          <%= form.file_field :cover, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>



  <div class="actions">
    <%= form.submit 'Crea/modifica gelato', class: 'btn btn-primary' %>
  </div>
<% end %>
